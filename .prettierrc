{
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",

    "overrides": [
      {
        "files": "*.json",
        "options": {
          "singleQuote": false
        }
      },
      {
        "files": ".*rc",
        "options": {
          "singleQuote": false,
          "parser": "json"
        }
      }
    ]
  }